<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorControlActivated">@color/purple_700</item>
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/purple_500</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/purple_700</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/purple_500</item>
    </style>

    <style name="Widget.AppTheme.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.AppTheme.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="Widget.MaterialComponents.CompoundButton.RadioButton." parent="">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/color_inactive_auto_topup</item>
        <item name="android:button">@null</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.AppCompat.CompoundButton.Switch." parent="">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/active_green</item>
        <item name="android:button">@null</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
    </style>


</resources>
